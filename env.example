# ============================================
# 데이터베이스 설정
# ============================================
# PostgreSQL 데이터베이스 연결 URL
# 형식: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/online-course"

# ============================================
# NextAuth 인증 설정
# ============================================
# NextAuth 시크릿 키 (최소 32자)
# 생성 방법: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-min-32-characters-long"

# NextAuth URL (프로덕션에서는 실제 도메인으로 변경)
# 개발: http://localhost:3000
# 프로덕션: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# Google OAuth 설정
# ============================================
# Google Cloud Console에서 발급받은 OAuth 2.0 클라이언트 ID
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# Google Cloud Console에서 발급받은 OAuth 2.0 클라이언트 시크릿
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================
# AI 서비스 API 키
# ============================================
# DeepSeek AI API 키 (필수)
# https://platform.deepseek.com 에서 발급
DEEPSEEK_API_KEY="sk-your-deepseek-api-key"

# OpenAI API 키 (선택사항, Pro 플랜용)
# https://platform.openai.com 에서 발급
OPENAI_API_KEY="sk-your-openai-api-key"

# ============================================
# Stripe 결제 설정
# ============================================
# Stripe 시크릿 키
# https://dashboard.stripe.com/apikeys 에서 발급
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"

# Stripe 공개 키 (클라이언트 사이드에서 사용)
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# Stripe 웹훅 시크릿
# https://dashboard.stripe.com/webhooks 에서 설정 후 발급
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# ============================================
# PayPal 결제 설정
# ============================================
# PayPal 클라이언트 ID
# https://developer.paypal.com/dashboard/applications 에서 발급
PAYPAL_CLIENT_ID="your-paypal-client-id"

# PayPal 클라이언트 시크릿
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"

# PayPal 웹훅 시크릿
# https://developer.paypal.com/dashboard/webhooks 에서 설정 후 발급
PAYPAL_WEBHOOK_SECRET="your-paypal-webhook-secret"

# ============================================
# Google Drive API 설정
# ============================================
# Google Service Account 이메일
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project-id.iam.gserviceaccount.com"

# Google Service Account Private Key (JSON 형식 또는 경로)
# 방법 1: JSON 문자열로 직접 입력 (Vercel 등 클라우드 환경)
GOOGLE_CREDENTIALS='{"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}'

# 방법 2: 로컬 파일 경로 (개발 환경)
# GOOGLE_CREDENTIALS_PATH="./share/data/bjchoi_service_account.json"

# 폴더 설정 파일 경로 (선택사항)
# FOLDERS_CONFIG_PATH="./share/data/folders.json"

# ============================================
# Vercel Blob Storage 설정 (선택사항)
# ============================================
# Vercel Blob Storage 읽기/쓰기 토큰
# https://vercel.com/docs/storage/vercel-blob 에서 발급
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your-token"

# ============================================
# Redis 설정 (선택사항)
# ============================================
# Redis 연결 URL
# 로컬: redis://localhost:6379
# Upstash: redis://default:password@host:port
REDIS_URL="redis://localhost:6379"

# ============================================
# 관리자 설정
# ============================================
# 관리자 이메일 목록 (쉼표로 구분)
# 예: ADMIN_EMAILS="admin@example.com,admin2@example.com"
ADMIN_EMAILS="admin@example.com"

# ============================================
# 환경 설정
# ============================================
# Node.js 환경 (development, production)
# Vercel 등에서는 자동으로 설정됨
NODE_ENV="development"

# ============================================
# 참고사항
# ============================================
# 1. 이 파일을 .env로 복사하여 실제 값으로 채워주세요
# 2. .env 파일은 절대 버전 관리에 포함하지 마세요
# 3. 프로덕션 환경에서는 모든 값이 올바르게 설정되어야 합니다
# 4. 민감한 정보(API 키, 시크릿 등)는 안전하게 관리하세요

